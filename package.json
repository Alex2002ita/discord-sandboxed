{
  "name": "discordsandbox",
  "version": "0.1.0",
  "description": "Discord Sandboxed with Push-to-Talk",
  "main": "main.js",
  "scripts": {
    "start": "electron . dev",
    "postinstall": "electron-builder install-app-deps",
    "package-win": "electron-builder --win --publish never"
  },
  "repository": "https://github.com/khlam/discord-sandboxed",
  "keywords": [
    "discord",
    "privacy",
    "sandbox"
  ],
  "author": "Kin-Ho Lam",
  "license": "GNU GENERAL PUBLIC LICENSE Version 3",
  "devDependencies": {
    "electron": "^6.0.12",
    "electron-builder": "^21.2.0"
  },
  "dependencies": {
    "iohook": "^0.6.1"
  },
  "iohook": {
    "targets": [
      "electron-73"
    ],
    "platforms": [
      "win32",
      "darwin",
      "linux"
    ],
    "arches": [
      "x64"
    ]
  },
  "build": {
    "appId": "com.electron.DiscordSandboxed",
    "productName": "Discord Sandboxed",
    "win": {
      "asar": true,
      "icon": "assets/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "license": "LICENSE.md",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true
    },
    "directories": {
      "output": "release"
    }
  }
}
